    <div class="bar"><div class="back" style="width:<%= @s18 %>%;"></div><div class="status" style="<%= 'color:white;' if @s18.to_i >= 43 %>">天才 <%= @s18.round(1) %>%</div></div>
    <div class="bar"><div class="back" style="width:<%= @s19 %>%;"></div><div class="status" style="<%= 'color:white;' if @s19.to_i >= 43 %>">怒ると怖い <%= @s19.round(1) %>%</div></div>
    <div class="bar"><div class="back" style="width:<%= @s20 %>%;"></div><div class="status" style="<%= 'color:white;' if @s20.to_i >= 43 %>">変態 <%= @s20.round(1) %>%</div></div>
  </div>


  <% if user_signed_in? %>
    <% if current_user?(@user) %>
      <%= link_to "投票結果をリセットする", reset_path(@user.id), data: { confirm: "ほんとに投票結果をリセットしてもいいですか？" }, method: :post, id:"reset_btn" %>
    <% end %>
  <% end %>

</div>

<%# アドセンス広告=>レクタングル大 %>
<%= render "home/adsense" %>

